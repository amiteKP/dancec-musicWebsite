extends layout.pug
block script 
  script(src='/static/script.js')

block style
    style 
      include ../static/style.css
      include ../static/styleContact.css
block content 
 div.container
   h1 Contact Us
   form(action="/contact",method="post",class="form-group") 
        input(type="text",class="inputclass",name="name",placeholder="Enter Your Name")
        input(type="phone",class="inputclass",name="phone",placeholder="Enter Your Phone Number")
        input(type="email",class="inputclass",name="email",placeholder="Enter Your Email")
        input(type="text",class="inputclass",name="address",placeholder="Enter Your Address")
        input(type="text",class="inputclass",name="query",placeholder="Enter Your Query")
        button(class="btn")
